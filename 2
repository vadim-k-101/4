#include <stdio.h>
#define iMAX  50
#define iMIN 1
void white () {
  printf("\033[0;37m");
}
void red () {
  printf("\033[1;31m");
}
int main(void) {
      int x,sum,i;
      printf("Give a number for 1, 50: ");
      scanf("\t%d", &x);
      if (x < iMIN || x > iMAX )
        return puts("\033[1;31mOut of range.\033[0;37m");
        printf("\tRange of \033[0;32m%d\033[0;37m - \033[0;32m%d\033[0;37m", x, iMAX);
        printf("\n_______________________________\n");
        white();
      if(x&1) ++x;
    //варіант for( цикл с параметром)//
      for(sum=0, i=x; i<=iMAX; i+=2) sum += i;
        printf("\tWith for: \033[0;32m%d\n", sum);
        white();
      sum=0;
      i=x-2;
      //варіант while(цикл перед умовою)//
      while((i+=2)<=iMAX) sum += i;
        printf("\tWith while: \033[0;32m%d\n", sum);
        white();
      sum=0;
      i=x;
      // варіант do whail(цикл після умови)//
      do { sum += i; } while((i+=2)<=iMAX);
          printf("\tWith do-while: \033[0;32m%d\n", sum);
          white();
          puts("_______________________________");
return 0;
}
